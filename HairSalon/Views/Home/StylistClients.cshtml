@{
  Layout = "_Layout";
}

<h1>HairSalon</h1>
<hr />

<h2>Stylist</h2>
<h3>@Model["stylist"].GetEmployee()</h3>
<h3>@Model["stylist"].GetDetails()</h3>



<h2>Clients</h2>
@if (@Model["clients"].Count != 0)
{
  @foreach (var Client in @Model["clients"])
  {
  <ul>
    <li>Client: @Client.GetName() | <a href="/client/@Client.GetId()/update">Update</a><br> Notes: @Client.GetNotes()</li>
  </ul>
  }
}




<form action="/clients/Delete" method="post">
  <button type="submit">Delete All Clients</button>
</form>

<a href="/stylists">View All Stylists</a>
<br>
<a href="/stylists/@Model["stylist"].GetId()/clients/new">Add Client</a>
